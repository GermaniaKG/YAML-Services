{
	"name":        "germania-kg/yaml-services",
	"description": "Symfony YAML Callables with Pimple ServiceProvider",

	"keywords":   [ "YAML", "Callable", "Pimple", "Symfony Finder", "Service Provider" ],

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

	"autoload": {
			"psr-4": {
					"Germania\\YamlServices\\": "src/"
			}
	},

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

  "suggest": {
  	"symfony/finder": "Symfony Finder component, as required by YamlFileParserCallable"
  },

	"require": {
		"pimple/pimple": "^3.0",
		"symfony/yaml": "^3.2",
		"psr/log": "^1.0"
	},

	"require-dev": {
		"satooshi/php-coveralls": "^1.0",
		"phpunit/phpunit": "^5.2",
		"symfony/finder": "^3.2"
	}



}
