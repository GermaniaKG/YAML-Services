{
	"name":        "germania-kg/yaml-services",
	"description": "Callable Symfony YAML wrapper, with Pimple Service provider and PSR-3 Logger support",

	"keywords":   [ "YAML", "Callable", "Symfony YAML", <"Symfony Finder", "Pimple", "Service Provider" ],

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

	"autoload": {
			"psr-4": {
					"Germania\\YamlServices\\": "src/"
			}
	},

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

	"require": {
		"pimple/pimple": "^3.0",
		"symfony/yaml": "^3.2",
		"symfony/finder": "^3.0",
		"psr/log": "^1.0"
	},

	"require-dev": {
		"satooshi/php-coveralls": "^1.0",
		"phpunit/phpunit": "^5.2",
		"symfony/finder": "^3.2"
	}



}
